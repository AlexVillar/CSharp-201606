@model ProyectoFacturas.Core.Modelos.Factura

@{
    ViewBag.Title = "Crear Factura";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
